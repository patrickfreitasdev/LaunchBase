{% extends 'layout.njk' %}

{% block head %}
  <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
  <title>Videos</title>
{% endblock head %}

{% block content %}
  <div id="wrapper">
    <h1>Aulas</h1>
  </div>

  <section class="cards">

    {% for item in items %}
      <div class="card" id="{{item.id}}">
        <div class="card__image-container">
          <img src="https://img.youtube.com/vi/{{item.id}}/maxresdefault.jpg" alt="{{item.title}}">
          {% if item.featured %}
            <div class="featured">Featured</div>
          {% endif %}
        </div>
        <div class="card__content">
          <p>{{item.title}}</p>
        </div>
        <div class="card__info">
          <p>{{item.duration}}</p>
          <div class="card__price">{{item.price}}</div>
        </div>
      </div>
    {% endfor %}

  </section>

  <script src="/scripts.js"></script>

{% endblock %}